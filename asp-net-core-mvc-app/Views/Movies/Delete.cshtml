@using AspNetCoreMvcApp.Data.ViewModels;


@model NewMovieVM;

@{
    ViewData["Title"] = "Delete a movie";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Delete confirmatiom for a movie</h4>
        </p>
        
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="row">
                    <div class="col-md-4 offset-4 text-center">
                        <img width="100%" id="ImageUrlPreview" />
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" readonly/>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="StartDate" class="control-label"></label>
                            <input asp-for="StartDate" type="date" class="form-control" readonly/>
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EndDate" class="control-label"></label>
                            <input asp-for="EndDate" type="date" class="form-control" readonly/>
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Price" class="control-label"></label>
                            <input asp-for="Price" type="number" class="form-control" readonly/>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ImageUrl" class="control-label"></label>
                            <input asp-for="ImageUrl" class="form-control" readonly/>
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label  class="control-label">CinemaId</label>
                            <input asp-for="CinemaId" class="form-control" readonly />
                            <span asp-validation-for="CinemaId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label"> Movie category</label>
                            <input asp-for="MovieCategory" class="form-control" readonly />
                            <span asp-validation-for="MovieCategory" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">ProducerId</label>
                            <input asp-for="ProducerId" class="form-control" readonly />
                            <span asp-validation-for="ProducerId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" readonly />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 offset-4 text-center">
                    <img width="100%" id="ImageUrlPreview" />
                </div>
                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-outline-danger float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $("#ImageUrl").val();
        });

        $("#ImageUrl").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}